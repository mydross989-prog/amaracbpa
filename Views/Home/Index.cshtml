@{
    ViewBag.Title = "Smart Business Automation";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <span class="badge rounded-pill bg-soft-primary text-primary mb-3 py-2 px-3" style="background: #fee6e2;">New: AI-Powered Analytics</span>
                <h1>Smart automation for the modern workplace.</h1>
                <p>Amarac BPA provides an integrated suite of business process automation tools designed to stream-line your organization from end-to-end.</p>
                <div class="d-flex gap-3 mt-4">
                    <button class="btn btn-primary btn-lg">Get Started Free</button>
                    <button class="btn btn-outline-primary btn-lg"><i class='bx bx-play-circle me-1'></i> Watch Demo</button>
                </div>
            </div>
            <div class="col-lg-6 hero-image">
                <img src="@Url.Content("~/Content/img/amarac_hero_illustration.png")" alt="Amarac BPA Illustration" class="img-fluid">
            </div>
        </div>
    </div>
</section>

<!-- Stats / Trust Bar -->
<section class="py-5 border-bottom">
    <div class="container">
        <div class="row text-center align-items-center">
            <div class="col-6 col-md-3">
                <h3 class="fw-bold mb-0">10k+</h3>
                <small class="text-muted">Happy Users</small>
            </div>
            <div class="col-6 col-md-3">
                <h3 class="fw-bold mb-0">500+</h3>
                <small class="text-muted">Organizations</small>
            </div>
            <div class="col-6 col-md-3">
                <h3 class="fw-bold mb-0">99.9%</h3>
                <small class="text-muted">Uptime</small>
            </div>
            <div class="col-6 col-md-3">
                <h3 class="fw-bold mb-0">24/7</h3>
                <small class="text-muted">Support</small>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section id="products" class="py-100 bg-white" style="padding: 100px 0;">
    <div class="container">
        <div class="section-title">
            <h2 class="display-5">One platform. All the tools.</h2>
            <p class="lead text-muted mx-auto" style="max-width: 700px;">Experience the power of a fully integrated business ecosystem. Powerful modules working in harmony.</p>
        </div>

        <div class="row g-4 mt-4">
            <!-- ACICO -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-time-five'></i></div>
                    <h3>ACICO</h3>
                    <p>Employee time management system for reliable clock-in and clock-out with location capturing.</p>
                </div>
            </div>

            <!-- APOS -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-cart-alt'></i></div>
                    <h3>APOS</h3>
                    <p>Integrated procurement system for managing purchase requests, approvals, and supplier collaboration.</p>
                </div>
            </div>

            <!-- Ascienti -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-barcode-reader'></i></div>
                    <h3>Ascienti™</h3>
                    <p>Dynamic asset management for tracking lifecycle from acquisition to decommissioning.</p>
                </div>
            </div>

            <!-- AVAL -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-car'></i></div>
                    <h3>AVAL</h3>
                    <p>Organization vehicle movements tracking, fuel utilization, and maintenance schedules.</p>
                </div>
            </div>

            <!-- Averiti -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-calendar-x'></i></div>
                    <h3>Averiti™</h3>
                    <p>Seamless absence request management and PTO tracking for modern teams.</p>
                </div>
            </div>

            <!-- Expensia -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-receipt'></i></div>
                    <h3>Expensia™</h3>
                    <p>Expense request management with automated approval workflows and routing.</p>
                </div>
            </div>

            <!-- OBOBE -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-user-plus'></i></div>
                    <h3>OBOBE</h3>
                    <p>HRM system for professional employee onboarding and offboarding management.</p>
                </div>
            </div>

            <!-- Apodosia -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-trending-up'></i></div>
                    <h3>Apodosia™</h3>
                    <p>Performance management with goal setting, validation, and multi-tier indexing.</p>
                </div>
            </div>

            <!-- DocuPliance -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-check-shield'></i></div>
                    <h3>DocuPliance</h3>
                    <p>Document and process review management for compliance, legal, and audit purposes.</p>
                </div>
            </div>

            <!-- FileLogic -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-file-find'></i></div>
                    <h3>FileLogic™</h3>
                    <p>AI-powered document digitization, secure archival, and lightning-fast retrieval.</p>
                </div>
            </div>

            <!-- Ubiquiti -->
            <div class="col-lg-4 col-md-6">
                <div class="module-card">
                    <div class="module-icon"><i class='bx bx-book-open'></i></div>
                    <h3>Ubiquiti™</h3>
                    <p>Comprehensive education management and online learning platform for all levels.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Managed Services Section -->
<section id="services" class="services-section">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <h2 class="display-6">Beyond Software.</h2>
                <p>We provide the infrastructure and expertise to keep your business running securely and efficiently.</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-3">
                <div class="service-tag p-4 rounded-4 bg-white shadow-sm border-start border-primary border-4">
                    <h5 class="fw-bold"><i class='bx bx-envelope me-2 text-primary'></i>Email Service</h5>
                    <p class="small text-muted mb-0">Domain-based email services for communities.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-tag p-4 rounded-4 bg-white shadow-sm border-start border-primary border-4">
                    <h5 class="fw-bold"><i class='bx bx-shield-quarter me-2 text-primary'></i>Cybersecurity</h5>
                    <p class="small text-muted mb-0">Awareness, data security, and GRC services.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-tag p-4 rounded-4 bg-white shadow-sm border-start border-primary border-4">
                    <h5 class="fw-bold"><i class='bx bx-wifi me-2 text-primary'></i>WISP</h5>
                    <p class="small text-muted mb-0">Wireless internet for university communities.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="service-tag p-4 rounded-4 bg-white shadow-sm border-start border-primary border-4">
                    <h5 class="fw-bold"><i class='bx bx-laptop me-2 text-primary'></i>ICT Infrastructure</h5>
                    <p class="small text-muted mb-0">Complete lab setup and infra solutions.</p>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-lg-12">
                <div class="p-5 rounded-5 shadow-sm text-white d-flex align-items-center justify-content-between" style="background: linear-gradient(135deg, var(--navy), #3a4141);">
                    <div>
                        <h3 class="mb-2">Digital Equipment Financing</h3>
                        <p class="mb-0 opacity-75">Procure essential IT equipment with flexible financing options.</p>
                    </div>
                    <button class="btn btn-primary px-5 py-3">Learn More</button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Bottom CTA -->
<section class="py-100 bg-white" style="padding: 100px 0;">
    <div class="container text-center">
        <h2 class="display-4 fw-bold mb-4">Ready to automate?</h2>
        <p class="lead text-muted mb-5">Join hundreds of organizations transforming their operations with Amarac BPA.</p>
        <div class="d-flex justify-content-center gap-3">
            <button class="btn btn-primary btn-lg px-5">Get Started</button>
            <button class="btn btn-outline-primary btn-lg px-5">Contact Sales</button>
        </div>
    </div>
</section>

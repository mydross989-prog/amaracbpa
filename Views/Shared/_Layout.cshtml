<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Amarac Technology Solutions</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&family=Open+Sans:wght@400;600&family=Poppins:wght@600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="~/Content/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/Content/img/logo.png" alt="Amarac" height="40" class="d-inline-block align-text-top me-2">
                    AMARAC<span>BPA</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item"><a class="nav-link" href="#products">Products</a></li>
                        <li class="nav-item"><a class="nav-link" href="#services">Managed Services</a></li>
                        <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                        <li class="nav-item ms-lg-3">
                            <a href="/Home/Login" class="btn btn-outline-primary me-2">Log In</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/Demo" class="btn btn-primary">Get a Demo</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h4 class="mb-4">AMARAC<span>BPA</span></h4>
                    <p class="text-secondary">Empowering organizations with smart business process automation solutions tailored for the African market.</p>
                </div>
                <div class="col-lg-2">
                    <h6 class="mb-3">Products</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link">ACICO</a></li>
                        <li><a href="#" class="footer-link">APOS</a></li>
                        <li><a href="#" class="footer-link">Ascienti</a></li>
                        <li><a href="#" class="footer-link">AVAL</a></li>
                    </ul>
                </div>
                <div class="col-lg-2">
                    <h6 class="mb-3">Services</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link">Cybersecurity</a></li>
                        <li><a href="#" class="footer-link">WISP</a></li>
                        <li><a href="#" class="footer-link">ICT Infra</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h6 class="mb-3">Subscribe to our newsletter</h6>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Email address">
                        <button class="btn btn-primary" type="button">Join</button>
                    </div>
                </div>
            </div>
            <hr class="mt-5 border-secondary">
            <div class="text-center pt-3 text-secondary">
                <small>&copy; @DateTime.Now.Year Amarac Technology Solutions. All rights reserved.</small>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="~/Scripts/js/site.js"></script>
</body>
</html>
